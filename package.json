{
	"name": "formatting-linting-demo",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint --fix",
		"lint-nofix": "eslint",
		"prettier": "prettier --write */**",
		"prettier-nofix": "prettier --list-different */**",
		"preview": "vite preview",
		"prepare": "husky"
	},
	"dependencies": {
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@stylistic/eslint-plugin": "^4.2.0",
		"@types/node": "^22.14.0",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@vitejs/plugin-react": "^4.3.4",
		"eslint": "^9.23.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-react": "^7.37.4",
		"eslint-plugin-react-hooks": "^5.1.0",
		"eslint-plugin-react-prefer-function-component": "^4.0.1",
		"eslint-plugin-react-refresh": "^0.4.19",
		"eslint-plugin-spellcheck": "^0.0.20",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"jiti": "^2.4.2",
		"knip": "^5.46.4",
		"lint-staged": "^15.5.0",
		"prettier": "^3.5.3",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.29.0",
		"vite": "^6.2.0"
	},
	"lint-staged": {
		"*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
			"prettier --write",
			"eslint --fix"
		]
	}
}
